<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
        xmlns:video="http://www.google.com/schemas/sitemap-video/1.1">

  <!--
  Priority Guidelines:
  1.0 = Homepage
  0.9 = Key pillar content, high-value pages
  0.8 = Important category/section pages
  0.7 = Regular articles/posts
  0.6 = Resources, tools
  0.5 = Archive, older content
  0.4 = Tags, minor pages

  Changefreq Guidelines:
  - always: Real-time data (rarely used)
  - hourly: News sites, live content
  - daily: Blog homepages, active sections
  - weekly: Regular blogs, updated sections
  - monthly: Static content, documentation
  - yearly: Legal pages, archived content
  - never: Truly static content
  -->

  <!-- Homepage -->
  <url>
    <loc>https://[your-domain.com]/</loc>
    <lastmod>[YYYY-MM-DD]</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>

  <!-- Main Documentation/Articles (High Priority) -->
  <url>
    <loc>https://[your-domain.com]/[article-slug]</loc>
    <lastmod>[YYYY-MM-DD]</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.9</priority>
    <!-- Optional: Include featured image -->
    <image:image>
      <image:loc>https://[your-domain.com]/images/[article-image].jpg</image:loc>
      <image:title>[Image title for accessibility]</image:title>
      <image:caption>[Brief caption]</image:caption>
    </image:image>
  </url>

  <!-- Section/Category Pages -->
  <url>
    <loc>https://[your-domain.com]/[category]/</loc>
    <lastmod>[YYYY-MM-DD]</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.8</priority>
  </url>

  <!-- Regular Articles/Blog Posts -->
  <url>
    <loc>https://[your-domain.com]/blog/[post-slug]</loc>
    <lastmod>[YYYY-MM-DD]</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>

  <!-- Resources/Tools -->
  <url>
    <loc>https://[your-domain.com]/resources/[resource-slug]</loc>
    <lastmod>[YYYY-MM-DD]</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.6</priority>
  </url>

  <!-- Archive/Older Content -->
  <url>
    <loc>https://[your-domain.com]/archive/[old-post]</loc>
    <lastmod>[YYYY-MM-DD]</lastmod>
    <changefreq>yearly</changefreq>
    <priority>0.5</priority>
  </url>

  <!-- Add more URLs following the same pattern -->

</urlset>

