{
  "version": "2.0.0",
  "description": "VSCode Tasks para integração com Warp Terminal",
  "comment": "Baseado no ambiente WSL2 Ubuntu 24.04 + Zsh + Claude Code v1.0.113",
  
  "tasks": [
    {
      "label": "🚀 Warp: Abrir Múltiplos Terminais",
      "type": "shell",
      "command": "echo",
      "args": ["Iniciando terminais Warp..."],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "Warp: Terminal Workspace",
        "Warp: Terminal Learning",
        "Warp: Terminal Config",
        "Warp: Terminal AI Assistant"
      ],
      "dependsOrder": "parallel",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    
    {
      "label": "Warp: Terminal Workspace",
      "type": "shell", 
      "command": "warp-cli",
      "args": ["open", "--path", "${workspaceFolder}", "--title", "Workspace"],
      "options": {
        "cwd": "/home/notebook/workspace"
      },
      "isBackground": true,
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "panel": "dedicated",
        "group": "warp-terminals"
      },
      "problemMatcher": []
    },
    
    {
      "label": "Warp: Terminal Learning",
      "type": "shell",
      "command": "warp-cli", 
      "args": ["open", "--path", "/home/notebook/workspace/learning", "--title", "Learning"],
      "options": {
        "cwd": "/home/notebook/workspace/learning"
      },
      "isBackground": true,
      "presentation": {
        "panel": "dedicated",
        "group": "warp-terminals"
      },
      "problemMatcher": []
    },
    
    {
      "label": "Warp: Terminal Config",
      "type": "shell",
      "command": "warp-cli",
      "args": ["open", "--path", "/home/notebook/config", "--title", "Config"],
      "options": {
        "cwd": "/home/notebook/config"
      },
      "isBackground": true,
      "presentation": {
        "panel": "dedicated", 
        "group": "warp-terminals"
      },
      "problemMatcher": []
    },
    
    {
      "label": "Warp: Terminal AI Assistant",
      "type": "shell",
      "command": "warp-cli",
      "args": ["open", "--command", "claude doctor", "--title", "Claude AI"],
      "isBackground": true,
      "presentation": {
        "panel": "dedicated",
        "group": "warp-terminals"
      },
      "problemMatcher": []
    },
    
    {
      "label": "🤖 Claude: Gerar Estrutura Projeto",
      "type": "shell",
      "command": "claude",
      "args": ["-p", "Generate a complete project structure with src/, docs/, tests/, and build/ directories, including appropriate files for a modern development project"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    
    {
      "label": "🔍 Diagnóstico: Sistema Completo",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "echo '🔍 Diagnóstico Completo' && claude doctor && echo '' && /home/notebook/config/vim-diagnostic.sh && echo '' && docker ps"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    
    {
      "label": "📦 Git: Sync Todos Repositórios", 
      "type": "shell",
      "command": "sync_repos",
      "args": ["Backup automático via VSCode"],
      "options": {
        "cwd": "/home/notebook/config"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    
    {
      "label": "🎭 Warp: Executar Orquestração",
      "type": "shell",
      "command": "/home/notebook/workspace/especialistas/warp/examples/orchestration-script.sh",
      "args": ["orchestrate"],
      "options": {
        "cwd": "/home/notebook/workspace/especialistas/warp"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    
    {
      "label": "📺 Warp: Monitor Orquestração",
      "type": "shell",
      "command": "/home/notebook/workspace/especialistas/warp/examples/orchestration-script.sh",
      "args": ["monitor"],
      "options": {
        "cwd": "/home/notebook/workspace/especialistas/warp"
      },
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    
    {
      "label": "🗂️ Yazi: Navegador de Arquivos",
      "type": "shell",
      "command": "yazi",
      "args": ["${workspaceFolder}"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    
    {
      "label": "⚙️ Vim: Abrir Configuração",
      "type": "shell", 
      "command": "vim",
      "args": ["/home/notebook/config/vimrc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    
    {
      "label": "🐚 Zsh: Abrir Configuração",
      "type": "shell",
      "command": "vim", 
      "args": ["/home/notebook/config/zshrc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    
    {
      "label": "🔄 Shell: Recarregar Configurações",
      "type": "shell",
      "command": "source",
      "args": ["/home/notebook/config/zshrc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ],
  
  "inputs": [
    {
      "id": "projectName",
      "type": "promptString",
      "description": "Nome do projeto"
    },
    {
      "id": "claudePrompt", 
      "type": "promptString",
      "description": "Prompt para Claude AI"
    },
    {
      "id": "gitCommitMessage",
      "type": "promptString", 
      "description": "Mensagem de commit"
    }
  ],
  
  "comments": {
    "usage": "Copie este arquivo para ~/workspace/.vscode/tasks.json",
    "requirements": [
      "Warp Terminal instalado",
      "Claude Code v1.0.113+", 
      "WSL2 Ubuntu 24.04+",
      "Zsh configurado",
      "Scripts em ~/config/ e ~/workspace/especialistas/warp/"
    ],
    "keyboard_shortcuts": {
      "run_task": "CTRL+SHIFT+P > Tasks: Run Task",
      "build_task": "CTRL+SHIFT+B",
      "custom_shortcuts": "Configure em keybindings.json"
    }
  }
}